<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".fragments.DescripcionPinturaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTituloPinturaDescripcion"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="105dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="248dp"
                    android:gravity="center"
                    android:text="Mona Lisa"

                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/imgPinturaDescr"
                    android:layout_width="407dp"
                    android:layout_height="227dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/dos" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/btnPlayAudio"
                            android:layout_width="82dp"
                            android:layout_height="61dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="124dp"
                            android:src="@drawable/baseline_play_circle_outline_24"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/brnFavoritos"
                            android:layout_width="82dp"
                            android:layout_height="61dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/baseline_favorite_border_24"
                            app:layout_constraintEnd_toStartOf="@+id/btnPlayAudio"
                            app:layout_constraintHorizontal_bias="0.91"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="105dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="248dp"
                    android:gravity="start"
                    android:text="Artista:"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtArtistaDesc"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="105dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="248dp"
                    android:gravity="start"
                    android:text="Leonardo Davinci"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="106dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="248dp"
                    android:gravity="start"
                    android:text="Fecha de creacion"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtFechaDesc"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="106dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="248dp"
                    android:gravity="start"
                    android:text="TextView"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="105dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="248dp"
                    android:gravity="start"
                    android:text="Descripcion"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtDescripcionDesc"
                    android:layout_width="204dp"
                    android:layout_height="98dp"
                    android:layout_marginStart="105dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="248dp"
                    android:gravity="start"
                    android:text="TextView"
                    android:textColor="@color/white" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
